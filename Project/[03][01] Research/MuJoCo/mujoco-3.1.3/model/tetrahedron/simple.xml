<mujoco model="tetrahedron">
  <compiler angle="radian" meshdir="assets" autolimits="true"/>

  <option cone="elliptic" impratio="10"/>

  <asset>
    <material name="metal" rgba="0.58 0.58 0.58 1"/>
    <material name="gray" rgba="0.4627 0.4627 0.4627 1"/>
    <material name="red" rgba="0.9 0.1 0.1 1"/>
    <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1=".1 .2 .3" rgb2=".2 .3 .4"/>
    <material name="grid" texture="grid" texrepeat="1 1" texuniform="true" reflectance=".2"/>
  </asset>

  <worldbody>
    <light name="light" pos="0 0 10" dir="0 0 -1" castshadow="true"/>
    <geom type="plane" size="3 3 .01" material="grid"/>

    <!--First Member-->
      <body name="[1-0]" pos=".5 -0.2886751 0" >
        <freejoint/>
        <geom type="sphere" pos="0 0 0" size="0.1" material="red"/>
        <geom type="cylinder" pos="-1 0 0" euler="1.57075 1.57075 0" size="0.05 1" material="metal"/>
                <site name="[1-S]" type="cylinder" pos="-1 0 0" euler="1.57075 1.57075 0" size="0.05 1" material="metal"/>
        	<body name="[1-1]" pos="0 0 0" >
          		<geom type="cylinder" pos="-1 0 0" euler="1.57075 1.57075 0"size="0.04 1" material="gray"/>
          		<joint name="Linear1" type="slide" axis="1 0 0" range="-2 0"/>
          <!--Second Member-->
              <body name="[2-0]" pos="-2 0 0" >
                <geom type="sphere" pos="0 0 0" size="0.1" material="red"/>
                <geom type="cylinder" euler="1.57075 -.523599 0" pos="0.5  0.86602   0"  size="0.05 1" material="metal"/>
                <joint name="Passive2" type="ball" pos="0 0 0" axis="0 1 0" damping=".9"/>
                  <!--Third Member-->
                      <body name="[3-0]" pos="1  1.73204  0" >
                        <geom type="sphere" pos="0 0 0" size="0.1" material="red"/>
                        <geom type="cylinder" pos="0.5 -0.86602 0" euler="1.57075  -2.61795 0 " size="0.05 1" material="metal"/>
                        <joint name="Passive3" type="ball" pos="0 0 0" axis="0 1 0" damping=".9"/>
                      </body>
              </body>
          </body>
          </body>


  </worldbody>	

    <equality>
        <connect name="kinematic_link" active="true" body1="[1-0]" body2="[3-0]" anchor="0 0 0" />-->
    </equality>
    
    <actuator>
	    <motor name='slide' joint='Linear1' gear='1000' ctrllimited='true' ctrlrange='-1 1' />
    </actuator>

    
    

</mujoco>
