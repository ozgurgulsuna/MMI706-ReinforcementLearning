<mujoco model="tetrahedron">
  <compiler angle="radian" meshdir="assets" autolimits="true"/>

  <option cone="elliptic" impratio="10"/>

  <asset>
    <material name="metal" rgba="0.58 0.58 0.58 1"/>
    <material name="gray" rgba="0.4627 0.4627 0.4627 1"/>
    <material name="red" rgba="0.9 0.1 0.1 1"/>
  </asset>

  <worldbody>
    <light name="light" pos="0 0 3" dir="0 0 -1" castshadow="true"/>
    <geom type="plane" size="1 1 0.1" material="metal"/>
    <!--First Member-->
    <body name="[Member1]" pos="0 0 1" >
      <body name="(1)" pos="0 0 0" >
        <geom type="sphere" size="0.1" material="red"/>
        <joint name="Node1" type="free"/>
      </body>
      <body name="[1-0]" pos="0 0 0" >
        <geom type="cyli" size="0.1 0.1" material="gray"/>
        <joint name="Base1" type="fixed"/>
      </body>
      <body name="[1-1]" pos="0 0 0" >
        <geom type="cyli" size="0.1 0.1" material="gray"/>
        <joint name="Linear1" type="slide" axis="1 0 0"/>
      </body>
 </body>
    <!--Second Member-->
</mujoco>
